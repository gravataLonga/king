{
    "name": "gravatalonga/web",
    "description": "Base application for my challenges",
    "type": "project",
    "require": {
        "gravatalonga/framework": "^1.0",
        "gravatalonga/driver-manager": "^1.0",
        "league/tactician": "^1.1",
        "league/tactician-container": "^3.0",
        "slim/slim": "4.*",
        "slim/psr7": "^1.5",
        "doctrine/dbal": "^3.3",
        "middlewares/negotiation": "^2.1",
        "twig/twig": "^3.0",
        "middlewares/whoops": "^2.0",
        "vlucas/phpdotenv": "^5.4",
        "monolog/monolog": "^2.5",
        "doctrine/migrations": "^3.5",
        "friendsofphp/php-cs-fixer": "^3.8"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5"
    },
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "Gravatalonga\\Web\\": "src/",
            "Domain\\": "domain/",
            "Databases\\Migrations\\": "resource/databases"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Jonathan Fontes",
            "email": "jonathan.alexey@icloud.com"
        }
    ],
    "scripts": {
        "fix": "php-cs-fixer fix",
        "migrate": "doctrine-migrations migrate --configuration=config/migrations.php --db-configuration=migrations-db.php",
        "migrate:generate": "doctrine-migrations generate --configuration=config/migrations.php --db-configuration=migrations-db.php",
        "migrate:status": "./vendor/bin/doctrine-migrations status --configuration=config/migrations.php --db-configuration=migrations-db.php"
    }
}