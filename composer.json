{
    "name": "gravatalonga/king",
    "description": "Base framework for my personal project, it can handle any kind of application",
    "type": "project",
    "require": {
        "php": "^8.1",
        "gravatalonga/king-foundation": "^1.0",
        "middlewares/whoops": "^2.0",
        "doctrine/migrations": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.8"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Domain\\": "domain/",
            "Databases\\Migrations\\": "resource/databases"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Jonathan Fontes",
            "email": "jonathan.alexey@icloud.com"
        }
    ],
    "scripts": {
        "fix": "php-cs-fixer fix",
        "test": "phpunit --testdox"
    }
}